                                </svg>
                                <div class="input-wrapper">
                                    <input type="text" id="phone-input" value="@Model.Provider.Telefono" required>
                                    <label for="phone-input" class="adaptive-label" placeholder="Teléfono" alt="Teléfono"></label>

                                </div>
                            </div>
                            <div id="alerts-container" style="width:100%;">
                            </div>
                        </form>
                        <div class="mt-2 buttons-container">
